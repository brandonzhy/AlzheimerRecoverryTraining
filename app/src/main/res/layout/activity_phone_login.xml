<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"


              android:background="@color/MistyRose2"

              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ly_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="14.0dip"
        android:paddingRight="12.0dip"
        >


        <TextView
            android:id="@+id/tv_phone_login_passwordlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dip"

            android:paddingTop="8dp"
            android:text="密码登录"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dip"
            android:paddingTop="8dp"
            android:text="|"
            android:textColor="@color/light_gray"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_phone_login_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dip"
            android:paddingTop="8dp"
            android:text="验证码登录"
            android:textColor="@color/light_gray"
            android:textSize="22sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_passwoerd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_title"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        >

        <TextView
            android:id="@+id/tv_phone_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dip"
            android:paddingTop="8dp"
            android:text="手机号: "
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/et_phone_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingLeft="10dip"
            android:paddingTop="8dp"
            android:textColorHint="@color/light_gray"
            android:textSize="25sp"
            android:textStyle="bold"
            android:theme="@style/MyEditText"
            />


        <TextView
            android:id="@+id/tv_phone_login_passcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:paddingLeft="10dip"
            android:paddingTop="8dp"
            android:text="密码: "
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:minHeight="50.0dip"
            android:paddingRight="12.0dip">


            <EditText
                android:id="@+id/et_phone_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:cursorVisible="true"
                android:hint="请输入密码"
                android:inputType="numberPassword"
                android:paddingTop="8dp"
                android:textColorHint="@color/light_gray"
                android:textSize="25sp"
                android:textStyle="bold"
                android:theme="@style/MyEditText"

                android:visibility="visible"
                />


            <ImageView
                android:id="@+id/img_phone_login_eye"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_password_eye_off"
                android:visibility="visible"
                />

            <EditText
                android:id="@+id/et_phone_login_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:cursorVisible="true"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:paddingTop="8dp"
                android:textColorHint="@color/light_gray"
                android:textSize="25sp"
                android:textStyle="bold"
                android:theme="@style/MyEditText"
                android:visibility="gone"/>
            <!--android:layout_marginLeft="200dp"-->
            <Button
                android:id="@+id/btn_phone_login_getcode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_nor_down"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/phone_login_now"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/check_border"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"

                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp">

        b

        <Button
            android:id="@+id/btn_phone_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_nor_down"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!---->
</LinearLayout>