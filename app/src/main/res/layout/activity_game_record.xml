<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar_grey">
        <ImageView
            android:id="@+id/iv_gamerecord_leftback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="15dp"
            android:src="@drawable/picture_back"
            android:visibility="visible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/shape0"
        android:showDividers="beginning|end|middle"
        android:background="@color/light_gray"
        >

        <ListView
            android:id="@+id/lv_gamerecord_puzzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="singleChoice">
        </ListView>
        <ListView
            android:id="@+id/lv_gamerecord_judge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:choiceMode="singleChoice"
            android:cacheColorHint="@android:color/transparent"
            >

        </ListView>

    </LinearLayout>

</LinearLayout>
